.pulse
  box-shadow: 0 0 0 rgba(189,15,225, 0.8);
  animation: pulse 1s infinite
  &:hover
    animation: none;

@keyframes pulse {
  0% {
    box-shadow: 0 0 0 0 rgba(189,15,225, 0.8);
  }
  70% {
    box-shadow: 0 0 0 10px rgba(189,15,225, 0);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(189,15,225, 0);
  }
}