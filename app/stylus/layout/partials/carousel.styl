.slider-1
  .slick-arrow
    position absolute
    bottom 0
    font-size: 80px
    text-align center
    width 85px
    height 85px
    background $purple
    color $white
    z-index 20
    cursor pointer
    transitions()
    &:hover
      background $crimson
    i
      position relative
      top -10px
  .left-arrow
    left 15px
    i
      left -2px
  .right-arrow
    left 118px
    i
      right -2px

.slider-2
  position absolute
  top: 8.5%;
  left: 10.4%;

  width 31.5%
  height 82.7%

  .slide-1, img, video

    width 100%
    height 100%

  .left-arrow
    left -103px
  .right-arrow
    left 0
